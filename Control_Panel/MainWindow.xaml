<Window x:Class="Control_Panel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Control_Panel"
        xmlns:controls="clr-namespace:SharedLibrary.MVVM.Controls;assembly=SharedLibrary"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        MouseDown="Window_MouseDown"
        Title="Smart App" Height="720" Width="1280">
    <Grid >

        <Image Source="Assets/Images/background-2.jpg" Stretch="Fill"/>
        <Rectangle Fill="#000000" Opacity="0.80" />

        <Grid Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>


                <controls:WeatherControl Grid.Column="0"/>

                <controls:DateTimeControl Grid.Column="1"/>



                <!--Settings Section-->
                <Button Grid.Column="2" FontFamily="{StaticResource FontAwesome-Regular}" FontSize="40" Content="&#xf142;" Background="Transparent" Foreground="#cccccc" HorizontalAlignment="Right" VerticalAlignment="Top" BorderThickness="0" />


            </Grid>
