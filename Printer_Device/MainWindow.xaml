<Window x:Class="Printer_Device.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Printer_Device"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>



        <TextBlock x:Name="ConnectivityStatus" Grid.Row="1" Text="Disconnected" HorizontalAlignment="Center" Margin="18 20" TextWrapping="Wrap"/>

        <Grid Grid.Row="0">
            <TextBlock x:Name="PrinterOnIcon" FontFamily="{StaticResource FontAwesome-Light}" Text="&#xf02f;" FontSize="120" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed" />
            <TextBlock x:Name="PrinterOffIcon" FontFamily="{StaticResource FontAwesome-Light}" Text="&#xf686;" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="80" Margin="0 -14 0 0" Visibility="Collapsed">

            </TextBlock>
        </Grid>

        <TextBlock x:Name="CurrentMessageSent"  HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="20" />
    </Grid>
</Window>
